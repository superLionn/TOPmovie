<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.searchpageActivity">
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_box"
        android:completionThreshold="1"
        android:hint="@string/input"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:text="@string/searching"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_box"
        android:layout_marginTop="30dp"
        android:id="@+id/movies">
    </Spinner>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="10dp"
        android:text="@string/tag"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:text="@string/action"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@color/colorRed"
        android:onClick="actionClick"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="120dp"
        android:text="@string/comedy"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@color/colorYellow"
        android:onClick="comedyClick"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="150dp"
        android:text="@string/scifi"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@color/colorBlue"
        android:onClick="scifiClick"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="60dp"
        android:text="@string/romance"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPink"
        android:onClick="romanceClick"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="180dp"
        android:text="@string/thriller"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@color/colorGrey"
        android:onClick="thrillerClick"/>

    <include layout="@layout/layout_bottom_navigation_view"/>

</RelativeLayout>